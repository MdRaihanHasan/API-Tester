{
  "manifest_version": 3,
  "name": "API Tester",
  "version": "1.0",
  "description": "A lightweight REST client for quick API testing.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"]
}